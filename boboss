  <h1>Mon Site avec Webhook Discord</h1>
  <p>Cliquez sur le lien ci-dessous pour envoyer une notification à Discord.</p>
  <a href="#" onclick="sendToDiscord(); return false;">Clique ici</a>

  <script>
    function sendToDiscord() {
      const webhookUrl = 'https://discord.com/api/webhooks/1293778615497920572/jYJnmhDap2fQh5MjNwhziPkb3y5zOTDaNZl6EQPd2ycXaXG9Wr5Z8p2IQpbPL7m4kTgq';
      const data = {
        content: "@everyone modérateur qui POP UP !"
      };

      fetch(webhookUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })
      .then(response => {
        if (response.ok) {
          alert('Notification envoyée à Discord !');
        } else {
          alert('Erreur lors de l\'envoi de la notification.');
        }
      })
      .catch(error => {
        console.error('Erreur:', error);
        alert('Erreur lors de l\'envoi de la notification.');
      });
    }
  </script>
</body>
</html>

